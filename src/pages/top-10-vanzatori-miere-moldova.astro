      // Simple hero slider (arrows, keyboard, swipe)
      function initHeroSlider() {
        const img = document.getElementById("heroImg");
        if (!img) return;

        let images = [];
        try {
          images = JSON.parse(img.getAttribute("data-images") || "[]");
        } catch (e) {}
        if (!Array.isArray(images) || images.length === 0) images = [img.src];

        let index = 0;
        const count = document.getElementById("heroCount");
        const prev = document.getElementById("heroPrev");
        const next = document.getElementById("heroNext");

        function update() {
          img.src = images[index];
          if (count) count.textContent = index + 1 + "/" + images.length;
        }
        function go(dir) {
          index = (index + dir + images.length) % images.length;
          update();
          track("hero_slide", { index: index + 1, src: images[index] });
        }

        prev && prev.addEventListener("click", () => go(-1));
        next && next.addEventListener("click", () => go(1));

        const region = document.querySelector(".hero-media");
        if (region) {
          region.addEventListener("keydown", (e) => {
            if (e.key === "ArrowLeft") {
              e.preventDefault();
              go(-1);
            }
            if (e.key === "ArrowRight") {
              e.preventDefault();
              go(1);
            }
          });
        }

        let startX = null;
        img.addEventListener(
          "touchstart",
          (e) => {
            startX = e.changedTouches[0].clientX;
          },
          { passive: true }
        );
        img.addEventListener(
          "touchend",
          (e) => {
            if (startX == null) return;
            const dx = e.changedTouches[0].clientX - startX;
            if (Math.abs(dx) > 30) go(dx < 0 ? 1 : -1);
            startX = null;
          },
          { passive: true }
        );

        update();
      }

