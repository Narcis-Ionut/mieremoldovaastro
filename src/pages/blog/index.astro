---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="ro">
	<head>
		<meta charset="utf-8" />
		<title>Blog miere naturala - ghiduri si articole</title>
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta
			name="description"
			content="Articole despre miere naturala: beneficii, mituri, comparatii locale si sfaturi de la apicultor."
		/>
		<link rel="canonical" href="https://mieremoldova.md/blog/" />

		<link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16.png" />
		<link rel="icon" href="/assets/favicon.ico" sizes="any" />
		<link rel="apple-touch-icon" href="/assets/apple-touch-icon.png" />
		<meta name="theme-color" content="#e67e00" />

		<meta property="og:title" content="Blog miere naturala" />
		<meta
			property="og:description"
			content="Ghiduri despre miere naturala, mituri si recomandari din Susleni, Orhei."
		/>
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://mieremoldova.md/blog/" />
		<meta property="og:image" content="https://mieremoldova.md/assets/og-preview.webp" />
		<meta property="og:locale" content="ro_RO" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Blog miere naturala" />
		<meta
			name="twitter:description"
			content="Articole despre miere naturala, beneficii si sfaturi locale."
		/>
		<meta name="twitter:image" content="https://mieremoldova.md/assets/og-preview.webp" />

		<style>
			:root {
				--max: 980px;
				--pad: 20px;
				--primary: #e67e00;
				--primary-light: #fff2d9;
				--primary-dark: #b45309;
				--text: #1f2937;
				--text-muted: #6b7280;
				--bg-light: #faf7f2;
				--bg-pattern: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23e6e0d4' fill-opacity='0.3' fill-rule='evenodd'%3E%3Cpath d='M0 20L20 0v5L5 20H0zm40 0L20 20v-5l15-15h5z'/%3E%3C/g%3E%3C/svg%3E");
				--border: #e5d6c0;
				--radius: 12px;
				--shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
				--transition: all 0.25s ease;
				--font-heading: "Georgia", serif;
			}
			html,
			body {
				margin: 0;
				font-family: "Roboto", system-ui, -apple-system, Segoe UI, Arial, sans-serif;
				color: var(--text);
				background: var(--bg-light) var(--bg-pattern);
				line-height: 1.7;
				font-size: 16px;
			}
			.wrap {
				max-width: var(--max);
				margin: 0 auto;
				padding: var(--pad);
				background: rgba(255, 255, 255, 0.95);
				box-shadow: var(--shadow);
			}
			header {
				display: flex;
				gap: 12px;
				align-items: center;
				justify-content: space-between;
				padding: 20px 0;
				border-bottom: 3px solid var(--primary);
				margin-bottom: 10px;
				flex-wrap: wrap;
			}
			.brand {
				font-weight: 800;
				font-size: 1.5rem;
				color: var(--primary);
				font-family: var(--font-heading);
				letter-spacing: 0.5px;
			}
			.brand a {
				color: inherit;
				text-decoration: none;
			}
			.nav {
				display: flex;
				gap: 14px;
				align-items: center;
				flex-wrap: wrap;
			}
			.nav a {
				padding: 6px 10px;
				border-radius: 8px;
				border: 1px solid transparent;
				color: var(--text);
				font-weight: 600;
			}
			.nav a:hover {
				border-color: var(--primary);
				background: var(--primary-light);
				text-decoration: none;
			}
			h1,
			h2,
			h3 {
				font-family: var(--font-heading);
				line-height: 1.2;
				color: var(--primary-dark);
			}
			h1 {
				font-size: 2.4rem;
				margin: 0 0 16px;
				font-weight: 800;
			}
			h2 {
				font-size: 1.7rem;
				margin: 32px 0 16px;
				font-weight: 700;
				position: relative;
				padding-bottom: 8px;
			}
			h2:after {
				content: "";
				position: absolute;
				bottom: 0;
				left: 0;
				width: 60px;
				height: 3px;
				background: var(--primary);
			}
			p {
				margin: 0 0 16px;
			}
			.hero {
				display: grid;
				grid-template-columns: 1.2fr 1fr;
				gap: 24px;
				align-items: center;
				margin: 30px 0;
				padding: 20px;
				background-color: rgba(255, 255, 255, 0.7);
				border-radius: var(--radius);
				box-shadow: var(--shadow);
			}
			.hero img {
				width: 100%;
				border-radius: var(--radius);
				object-fit: cover;
				box-shadow: var(--shadow);
				border: 4px solid #fff;
			}
			.grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 24px;
				margin: 24px 0;
			}
			.card {
				border: none;
				border-radius: var(--radius);
				padding: 24px;
				background: #fff;
				box-shadow: var(--shadow);
				position: relative;
				overflow: hidden;
			}
			.card:before {
				content: "";
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 4px;
				background: var(--primary);
			}
			.card h3 {
				margin-top: 0;
			}
			.card a {
				color: var(--primary);
				text-decoration: none;
				font-weight: 600;
			}
			.card a:hover {
				color: var(--primary-dark);
				text-decoration: underline;
			}
			.btn {
				display: inline-flex;
				align-items: center;
				padding: 10px 18px;
				border-radius: var(--radius);
				border: none;
				text-decoration: none;
				color: #fff;
				background: var(--primary);
				font-weight: 600;
				transition: var(--transition);
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			}
			.btn:hover {
				background: var(--primary-dark);
				transform: translateY(-2px);
			}
			.meta {
				color: var(--text-muted);
				font-size: 0.95rem;
				margin-bottom: 8px;
			}
			.muted {
				color: var(--text-muted);
				font-size: 0.95rem;
			}
			footer {
				margin: 50px 0 20px;
				color: var(--text-muted);
				font-size: 0.9rem;
				text-align: center;
				padding-top: 20px;
				border-top: 1px solid var(--border);
			}
			@media (max-width: 900px) {
				.hero {
					grid-template-columns: 1fr;
				}
			}
			@media (max-width: 800px) {
				.grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<div class="wrap">
			<header>
				<div class="brand">
					<a href="/" aria-label="Miere Moldova">Stupina Susleni</a>
				</div>
				<nav class="nav" aria-label="Main">
					<a href="/miere-naturala/">Miere naturala</a>
					<a href="/blog">Blog</a>
					<a href="/#pret-miere-de-albine">Preturi</a>
					<a href="/top-10-vanzatori-miere-moldova">Top 10 vanzatori</a>
					<a href="/despre-noi">Despre noi</a>
				</nav>
			</header>

			<section class="hero">
				<div>
					<h1>Blog miere naturala</h1>
					<p>
						Articole scrise pentru cei care vor sa cumpere miere naturala in mod
						informat: beneficii, mituri, comparatii locale si sfaturi practice.
					</p>
					<a class="btn" href="/miere-naturala/">Vezi sortimentele de miere</a>
				</div>
				<div>
					<img
						src="/assets/mieregeneral.webp"
						alt="Borcan cu miere naturala din Susleni, Orhei"
						loading="lazy"
					/>
				</div>
			</section>

			<section>
				<h2>Articole recente</h2>
				<div class="grid">
					{
						posts.map((post) => {
							const slug = post.slug ?? post.id.replace(/\.(md|mdx)$/, '');
							return (
								<article class="card">
									<div class="meta">
										{post.data.pubDate.toLocaleDateString('ro-RO', {
											year: 'numeric',
											month: 'long',
											day: 'numeric',
										})}
									</div>
									<h3>
										<a href={`/blog/${slug}`}>{post.data.title}</a>
									</h3>
									<p>{post.data.description}</p>
									<a href={`/blog/${slug}`}>Citeste articolul</a>
								</article>
							);
						})
					}
				</div>
			</section>

			<footer>
				<div class="muted">Stupina Susleni - Alexandru</div>
				<a href="/blog">Blog</a> | <a href="https://moldovawebsite.md">moldovawebsite.md</a>
			</footer>
		</div>
	</body>
</html>

